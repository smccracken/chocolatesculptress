{%- set navPages = collections.all | eleventyNavigation %}
<header role="banner" class="site-header pad-top-base pad-bottom-base">
  <div class="site-header__inner">
    <a href="/" aria-label="{{ site.name }} - Home" class="site-header__branding">
      <span class="visually-hidden">Homepage</span>
      {% include "icons/logo.svg" %}
    </a>    
    <div class="site-header__nav">
      <nav class="nav">
          <ul class="nav__list">
          {%- for entry in navPages %}
          <li class="nav__list-item{% if entry.url == page.url %} nav-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
          </li>
          {%- endfor %}
          </ul>
      </nav>
    </div>
  </div>
</header>
