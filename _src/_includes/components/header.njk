<header class="c-header">
  <a class="c-header__branding" href="/">🍫</a>
  <a class="c-button c-button--secondary" href="#footer-menu">Menu</a>
  {% set navPages = collections.all | eleventyNavigation %}
  <nav class="c-header__nav">
    <ul class="c-header__nav-list">
      {%- for entry in navPages %}
      <li class="c-header__nav-item{% if entry.url == page.url %} c-header__nav-active{% endif %}">
        <a class="c-header__nav-anchor" href="{{ entry.url | url }}">{{ entry.title }}</a>
      </li>
      {%- endfor %}
    </ul>
  </nav>
</header>
