{% extends 'layouts/base.njk' %}

{% block header %}
  <header class="u-flow hero">
    <h1 class="u-font-size-xl">{{ title }}</h1>
    {% if summary %}
      <p class="u-margin-top-05 u-font-size-md">{{ summary | markdownify_inline | safe }}</p>
    {% elif description %}
      <p class="u-margin-top-05 u-font-size-md">{{ description | markdownify_inline | safe }}</p>
    {% endif %}
  </header>
{% endblock %}

{% block content %}
<div class="u-flow">{{ content | safe }}</div>
{% endblock %}
