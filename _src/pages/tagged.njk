---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - press
    - campaign
    - print
    - tv
permalink: /tagged/{{ tag }}/index.html
---
{% set layoutStyles = [
  '/components/entry.css',
  '/components/listing.css',
  '/components/pagination.css',
  '/utilities/eyebrow.css'
]%}
{% extends "layouts/base.njk" %}

{% block content %}
{% set sculptures = collections.taggedSculptures[tag] %}
<section class="o-content u-margin-bottom-3 u-linear">
    <h1>Sculptures Tagged “{{ tag }}”</h1>
    <div class="o-grid" style="--min-column: 250px;">
    {%- for sculpture in sculptures %}
      <article class="c-card" id="product-1">
        <div style="--aspect-ratio: 7/5;"><img src="/assets/sculptures/{{ sculpture.fileSlug }}/thumbnail.jpg" alt="Photo of {{ sculpture.data.title }}" loading="lazy"></div>
        <h3 class="c-card__heading"><a href="{{ sculpture.url }}">{{ sculpture.data.title }}<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path d="M0 0h24v24H0z" fill="none"></path><path fill="currentcolor" d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"></path></svg></a></h3>
      </article>
    {%- endfor %}
    </div>
</section>

{% set posts = collections.taggedPosts[tag] %}
{% if posts.length %}
<section class="o-content">
    <h1>Posts Tagged “{{ tag }}”</h1>
    <ul class="c-listing u-margin-top-2">
    {% set entries = posts %}
    {% include "components/listing.njk" %}
    </ul>
</section>
{% endif %}
{% endblock %}
